.box-background
    .container
        .columns
            .column.is-6-desktop.is-offset-3-desktop.is-8-tablet.is-offset-2-tablet.is-10-mobile.is-offset-1-mobile.main-content
                %h1.text-ex-large.has-under-line.text-center 新規登録
                %p.text-center.text-small アカウントを新規作成します。
                
                = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
                    -# エラーメッセージ
                    - if f.object.errors.any?
                        .columns.has-middle-margin
                            .column.is-10.is-offset-1
                                .error-message
                                    %ul
                                        %li
                                            %p
                                                %i.fas.fa-exclamation-triangle
                                                入力内容をご確認下さい。
                                        - f.object.errors.full_messages.each do |message|
                                            %li
                                                = message
                    .has-middle-margin
                        .field.has-small-margin
                            %label.label
                                お店の名前
                                %span.has-text-danger [必須]
                            .control
                                = f.text_field :shop_name,class:'input', placeholder:'最大10文字まで'
                        %span.label
                            お店の情報
                            %span.has-text-danger [必須] 
                        .box
                            .field
                                %label 郵便番号
                                %br
                                .control
                                    = f.text_field :postal_code,class:'input is-small', placeholder:'半角数字7桁（ハイフンは不要です）'
                            .field
                                %label 都道府県
                                %br
                                .control
                                    .select.is-small.is-fullwidth
                                        = f.select :state,Shop.states.keys.to_a,{prompt:'選択してください'}
                            .field
                                %label 市区町村
                                %br
                                .control
                                    = f.text_field :city,class:'input is-small',placeholder:"例：渋谷区"
                            .field
                                %label 町名・番地・建物
                                %br
                                .control
                                    = f.text_field :street,class:'input is-small'
                        .field
                            %label.label
                                電話番号
                                %span.has-text-danger [必須]
                            .control
                                = f.text_field :phone_number,class:'input is-small',placeholder:"市外局番から入力して下さい（ハイフンは不要です）"
                        .field
                            %label.label
                                Eメール
                                %span.has-text-danger [必須]
                            .control
                                = f.email_field :email, autocomplete: "email",class:'input is-small',placeholder:'email@example.com'
                        .field
                            %label.label
                                パスワード
                                %span.has-text-danger [必須]
                            .control
                                = f.password_field :password, autocomplete: "new-password",class:'input is-small', placeholder:'半角英数字6文字以上'
                        .field
                            %label.label
                                パスワード確認
                                %span.has-text-danger [必須]
                            .control
                                = f.password_field :password_confirmation, autocomplete: "new-password",class:'input is-small',placeholder:'確認のためもう一度入力して下さい'
                        .actions.text-center
                            = f.submit "登録",class:'button is-rounded'