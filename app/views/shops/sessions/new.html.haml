.container
  .columns
    .column.is-6.is-offset-3.is-10-mobile.is-offset-1-mobile.main-content
      %h1.text-ex-large.has-under-line-pink.text-center ログイン
      .box.has-middle-margin
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          .field.has-small-margin
            = f.label :email,'Eメール',class:'label'
            .control
              = f.email_field :email, autocomplete: "email",class:'input'
          .field
            = f.label :password,'パスワード',class:'label'
            .control
              = f.password_field :password, autocomplete: "current-password",class:'input'
          - if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me
              = f.label :remember_me,'パスワードを記憶する'
          .actions.text-center
            = f.submit "ログイン",class:'button is-rounded'