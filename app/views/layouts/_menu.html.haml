#menu-overlay
    .columns.menu-modal
        .column.is-4.is-offset-4.menu-list
            %ul
                -if shop_signed_in?
                    = link_to top_shop_mypages_path do
                        %li
                            %i.fas.fa-cog
                            マイページ
                -else
                    = link_to new_shop_registration_path do
                        %li
                            %i.fas.fa-user-alt
                            新規登録
                    = link_to new_shop_session_path do
                        %li
                            %i.fas.fa-sign-in-alt
                            ログイン
                = link_to about_path do
                    %li
                        %i.fas.fa-question
                        About?
                = link_to root_path do
                    %li
                        %i.fas.fa-home
                        トップページ
                - if shop_signed_in?
                    = link_to destroy_shop_session_path, method: :delete do
                        %li
                            %i.fas.fa-sign-out-alt
                            ログアウト