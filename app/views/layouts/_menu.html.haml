                    = link_to shop_menus_path do
                        %li
                            %i.fas.fa-clipboard-list
                            メニュー管理
                    = link_to shop_categories_path do
                        %li
                            %i.fas.fa-sticky-note
                            カテゴリ
                    = link_to shop_emotions_path do
                        %li
                            %i.fas.fa-grin
                            エモーション
                    = link_to shop_requests_path do
                        %li
                            %i.fas.fa-comment-dots
                            リクエスト
                    = link_to shop_mypages_path do
                        %li
