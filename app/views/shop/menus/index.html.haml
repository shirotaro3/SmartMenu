.container
    .columns
        .column.is-3.is-hidden-mobile
            =render 'shop/sidebar'
        .column.is-1.is-hidden-mobile
        .column.is-10-mobile.is-offset-1-mobile
            %table.table.is-hoverable
                %thead
                    %tr
                        %td{colspan:'2'}
                            %h2.text-large
                                %i.fas.fa-clipboard-list
                                作成したメニュー
                            %p.text-small ボタンからQRコードを表示できます。
                %tbody
                    - if @menus.any?
                        -@menus.each do |menu|
                            %tr
                                %td
                                    =menu.menu_name
                                %td
                                    .text-right
                                        = link_to shop_menu_qrcode_path(menu),class:'button is-warning is-small is-rounded' do
                                            %i.fas.fa-qrcode
                                            QR
                                        = link_to shop_menu_path(menu),class:'button is-info is-small is-rounded strong' do
                                            %i.fas.fa-edit
                                            詳細
                                        = link_to shop_menu_path(menu),method: :delete,class:'button is-danger is-small is-rounded strong' do
                                            %i.fas.fa-trash
                                            削除
                    - else
                        %tr
                            %td
                                メニューはありません。
                        %tr
                            %td
            %table.table
                %thead
                    %tr
                        %td
                            %h2.text-large
                                %i.far.fa-paper-plane
                                メニュー新規作成
                %tbody
                    %tr
                        %td
                            = form_with model: Menu.new, url: { :controller=>'shop/menus', :action=>'create'} do |f|
                                .field.has-addons
                                    .control
                                        = f.text_field :menu_name, class:'input',placeholder:'メニュー名を入力'
                                    .control
                                        = f.submit '登録', class:'button is-link'