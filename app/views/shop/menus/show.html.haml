.container
    .columns
        .column.is-3.is-hidden-mobile
            =render 'shop/sidebar'
        .column.is-1.is-hidden-mobile
        .column.is-10-mobile.is-offset-1-mobile
            %table.table
                %thead
                    %tr
                        %td{colspan:'2'}
                            %h2.text-large
                                %i.fas.fa-edit
                                メニュー情報
                %tbody
                    %tr
                        %td
                            .columns.is-mobile
                                .column.is-6
                                    メニュー名
                                .column.is-6
                                    =@menu.menu_name
                            .columns.is-mobile
                                .column.is-6
                                    メニューカラー
                                .column.is-6
                                    =@menu.menu_name
                    
            -# 中間テーブルリスト
            %table.table
                %thead
                    %tr
                        %td{colspan:'2'}
                            %h2.text-large
                                %i.fas.fa-edit
                                アイテムグループ
                %tbody
                    %tr
                        - @menu.item_groups.each do |item_group|
                            %td
                                =item_group.category.name
                            %td
                                = link_to shop_item_group_path(item_group),class:'button is-info is-small is-rounded strong' do
                                    %i.fas.fa-edit
                                    詳細
                                = link_to shop_item_group_path(item_group),method: :delete,class:'button is-danger is-small is-rounded strong' do
                                    %i.fas.fa-trash
                                    削除
            