- menu_items.each do |menu_item|
    %tr
        %td
            .columns.is-vcentered.is-mobile
                .column.is-2
                    -# 並び替えリンク　{}falseで非表示
                    .columns.is-vcentered.is-mobile
                        .column
                            = link_to_if(!menu_item.first?,'▲', move_higher_shop_menu_item_path(menu_item), :id => menu_item, remote: true, class:'button is-small is-rounded is-block'){}
                            = link_to_if(!menu_item.last?,'▼', move_lower_shop_menu_item_path(menu_item), :id => menu_item, remote: true, class:'button is-small is-rounded is-block'){}
                        .column
                            = menu_item.position
                .column.is-3
                    = attachment_image_tag menu_item,:item_image,:fill,80,80,format: 'jpeg',fallback: "no_image.jpg",size:'80x80'
                .column.is-3
                    = menu_item.item_name
                .column.is-2
                    ¥
                    = menu_item.price
                .column.is-2.text-right
                    = link_to shop_menu_item_path(menu_item),class:'button is-small is-rounded is-info strong' do
                        %i.fas.fa-search
                        詳細
                    = link_to shop_menu_item_path(menu_item),class:'button is-small is-rounded is-danger strong' do
                        %i.fas.fa-trash
                            削除