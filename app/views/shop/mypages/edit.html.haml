-content_for(:title) {'登録情報編集'}
.container
    .columns
        .column.is-3.is-hidden-mobile
            =render 'shop/sidebar'
        .column.is-8.main-content
            .links-nav.text-ex-small
                = link_to "登録情報",shop_mypage_path(@shop)
                >編集
            .columns
                .column.is-10-desktop.is-offset-1-desktop.is-12-tablet.is-offset-0-tablet
                    %h2.text-large
                        %i.fas.fa-store
                        登録情報編集
                    .box.has-middle-margin
                        = form_with model: @shop,url: shop_mypage_path,local: true do |f|
                            = render 'layouts/error-message', model: f.object
                            .field
                                = f.label :shop_name,'お店の名前',class:'label'
                                .control
                                    = f.text_field :shop_name,class:'input'
                            %span.label お店の住所
                            .box.has-background-white-ter
                                .field
                                    = f.label :postal_code,'郵便番号',class:'label'
                                    .control
                                        = f.text_field :postal_code,class:'input is-small'
                                .field
                                    = f.label :state,'都道府県',class:'label'
                                    .control
                                        .select.is-fullwidth.is-small
                                            = f.select :state,Shop.states.keys.to_a,{prompt:'選択してください'}
                                .field
                                    = f.label :city,'市区町村',class:'label'
                                    .control
                                        = f.text_field :city,class:'input is-small'
                                .field
                                    = f.label :street,'町名・番地・建物',class:'label'
                                    .control
                                        = f.text_field :street,class:'input is-small'
                            .field
                                = f.label :phone_number,'電話番号',class:'label'
                                .control
                                    = f.text_field :phone_number,class:'input is-small'
                            .field
                                = f.label :email,'Eメール',class:'label'
                                .control
                                    = f.text_field :email,class:'input is-small'
                            .field
                                .control.text-center
                                    = f.submit '変更',class:'button'